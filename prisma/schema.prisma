generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model PcBanner {
  id        Int      @id @default(autoincrement())
  src       String?
  alt       String?
  title     String?
  href      String?  @db.LongText
  date      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MobieBanner {
  id        Int      @id @default(autoincrement())
  src       String?
  alt       String?
  title     String?
  href      String?  @db.LongText
  date      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
